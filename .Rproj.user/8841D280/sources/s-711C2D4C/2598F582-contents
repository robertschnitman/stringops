s_dup <- strrep

# s_insert <- function(s, position, insert) s

s_split <- strsplit

string_len <- nchar
s_len      <- string_len
len        <- string_len

string_reverse <- function(s) {
  
  splits <- lapply(strsplit(s, ""), rev)
  
  output <- sapply(splits, string_join)
  
  output
  
}
s_reverse <- string_reverse
reverse   <- string_reverse